# Partir de la imagen oficial de node
FROM node:latest

# Variables requeridas
# $repoApp = Repositorio que contiene el c贸digo de la api a desplegar
# $appName = Nombre del proyecto o api

# Variables de entorno en el dockerfile
ENV TZ Europe/Madrid

# Establecer la zona horaria
RUN ln -snf /usr/share/zoneinfo/${TZ} /etc/localtime && echo ${TZ} > /etc/timezones

# Copiar script de construcci贸n a la imagen
COPY start.sh /root/

# Ejecuci贸n del script de construcci贸n
CMD [ "bash", "/root/start.sh" ] 

